# Copy to .env and fill your key
PHOTOROOM_API_KEY=your_api_key_here

# Official API endpoints
# Sandbox for /v1/segment uses the same endpoint with a sandbox_ API key.
PHOTOROOM_SEGMENT_URL=https://sdk.photoroom.com/v1/segment
PHOTOROOM_EDIT_URL=https://image-api.photoroom.com/v2/edit

# Network timeout
PHOTOROOM_TIMEOUT_SECONDS=60

# Demo app settings
APP_MAX_UPLOAD_BYTES=10485760
PHOTOROOM_ADVANCED_EXPORT_FORMAT=png
# Allowed values in this demo: FFFFFF, F2F4F7, EAF7EE, FFEAF4, EAF2FF
PHOTOROOM_ADVANCED_BACKGROUND_COLOR=FFFFFF
PHOTOROOM_ADVANCED_REFERENCE_BOX=subjectBox
PHOTOROOM_ADVANCED_OUTPUT_SIZE=1200x1500
PHOTOROOM_ADVANCED_STAGING_OUTPUT_SIZE=1200x1500
PHOTOROOM_ADVANCED_HORIZONTAL_ALIGNMENT=center
PHOTOROOM_ADVANCED_VERTICAL_ALIGNMENT=center
PHOTOROOM_ADVANCED_PADDING=0.02
PHOTOROOM_ADVANCED_MARGIN=0.00
PHOTOROOM_ADVANCED_IGNORE_PADDING_SNAP=false

# Safety switch: keep true for free/sandbox usage.
# This demo is designed and tested with sandbox keys.
PHOTOROOM_REQUIRE_SANDBOX=true
